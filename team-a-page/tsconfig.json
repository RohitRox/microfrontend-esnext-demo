{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2016"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "build/"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}

